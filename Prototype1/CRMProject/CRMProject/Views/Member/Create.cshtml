@model CRMProject.Models.Member

@{
    ViewData["Title"] = "Create";

    <!-- Display Success or Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
}
<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Create Member</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row">
                    <!-- Member Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberName" class="control-label"></label>
                            <input asp-for="MemberName" class="form-control" id="MemberName" name="MemberName" required />
                            <span asp-validation-for="MemberName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Member Size -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberSize" class="control-label"></label>
                            <input asp-for="MemberSize" class="form-control" />
                            <span asp-validation-for="MemberSize" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Member Status-->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberStatus" class="control-label"></label>
                            <select asp-for="MemberStatus" class="form-control"
                                    asp-items="Html.GetEnumSelectList<MemberStatus>()">
                                <option value="">Select a Member Status</option>
                            </select>
                            <span asp-validation-for="MemberStatus" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Accounts Payable Email -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberAccountsPayableEmail" class="control-label"></label>
                            <input asp-for="MemberAccountsPayableEmail" class="form-control" />
                            <span asp-validation-for="MemberAccountsPayableEmail" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Member Start Date -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberStartDate" class="control-label"></label>
                            <input asp-for="MemberStartDate" type="date" class="form-control" />
                            <span asp-validation-for="MemberStartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Member End Date -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberEndDate" class="control-label"></label>
                            <input asp-for="MemberEndDate" type="date" class="form-control" />
                            <span asp-validation-for="MemberEndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Member Last Contact Date -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberLastContactDate" class="control-label"></label>
                            <input asp-for="MemberLastContactDate" type="date" class="form-control" />
                            <span asp-validation-for="MemberLastContactDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Member Notes -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberNotes" class="control-label mr-3" style="min-width: 150px; white-space: nowrap;">Member Notes:</label>
                            <textarea asp-for="MemberNotes" class="form-control" style="min-height: 100px; flex-grow: 1;"></textarea>
                            <span asp-validation-for="MemberNotes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to Members</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
