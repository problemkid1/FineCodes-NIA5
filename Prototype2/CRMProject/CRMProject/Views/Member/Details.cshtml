@model CRMProject.Models.Member

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details - " + Model?.MemberName;
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h1>Member Information</h1>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberName)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberSize)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberSize)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberStatus)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberStatus)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberAccountsPayableEmail)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberAccountsPayableEmail)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberStartDate)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberStartDate, "{0:yyyy-MM-dd}")</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberEndDate)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberEndDate, "{0:yyyy-MM-dd}")</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberLastContactDate)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberLastContactDate, "{0:yyyy-MM-dd}")</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MemberNotes)</dt>
                    <dd class="col-sm-10">
                        <textarea class="form-control" readonly>@Model.MemberNotes</textarea>
                    </dd>
                </dl>


            </div>
        </div>
    </div>
    <div class="mt-4">

        @Html.Partial("_ListOfContacts", Model.MemberContacts)
    </div>
    <div class="mt-4">

        @Html.Partial("_ListOfAddress", Model.Address != null ? new List<Address> { Model.Address } : new List<Address>())

    </div>
    <div class="mt-4">

        @Html.Partial("_IndustryInfo", Model.MemberIndustries)
    </div>
    <div class="mt-4">
        @Html.Partial("_MembershipTypeInfo", Model.MemberMembershipTypes)
    </div>
    <div class="form-group text-center">
        @if (Model?.ID != null)
        {
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit Member</a>
        }
        <a class="btn btn-secondary ml-2" asp-action="Index">Back to Members</a>
    </div>
</div>
