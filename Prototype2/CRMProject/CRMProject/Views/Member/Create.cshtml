                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label">Selected Membership Types</label>
                        <button type="button" id="btnRemoveMembership" class="btn btn-danger btn-sm"><strong>-</strong></button>
                        @Html.ListBox("selectedMembership", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                    </div>

                    
                </div>

                <!-- Industry Types -->
                <div class="row">

                    <div class="form-group col-md-6">
                        <label class="control-label">Available Industry Types</label>
                        <button type="button" id="btnAddIndustry" class="btn btn-primary btn-sm"><strong>+</strong></button>
                        @Html.ListBox("availableIndustry", (MultiSelectList)ViewBag.availOptsIndus, new { @size = 10, @class = "form-control" })
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label">Selected Industry Types</label>
                        <button type="button" id="btnRemoveIndustry" class="btn btn-danger btn-sm"><strong>-</strong></button>
