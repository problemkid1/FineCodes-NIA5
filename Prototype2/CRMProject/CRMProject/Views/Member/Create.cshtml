                <!-- Membership Types -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Select Membership Types</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">

                            <div class="form-group col-md-6">
                                <span class="control-label">Available Membership Types</span>
                                <button type="button" id="btnAddMembership" class="btn btn-primary btn-sm"><strong>+</strong></button>
