@model CRMProject.Models.Industry

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h2>Delete - @Html.DisplayFor(model => model.Summary)</h2>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IndustrySector)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.IndustrySector)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IndustrySubsector)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.IndustrySubsector)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IndustryNAICSCode)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.IndustryNAICSCode)</dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MemberIndustries)
                    </dt>
                    <dd class="col-sm-10">
                        @foreach (var c in Model.MemberIndustries)
                        {
                            @c.Member.MemberName <br />
                        }
                    </dd>
                </dl>

                <div class="form-group text-center">
                    <h3>Are you sure you want to delete this industry?</h3>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger">Delete Industry</button>
                        <a class="btn btn-secondary ml-2" asp-action="Index">Back to Industries</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
