<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h2>Detail - @Html.DisplayFor(model => model.Summary)</h2>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.FirstName)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.FirstName)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.LastName)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.LastName)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.ContactTitleRole)</dt>
                    <dd class="col-sm-10 col-md-9">
                        @if (Model.ContactTitleRole != null)
                        {
                            @Model.ContactTitleRole
                        }
                        <span>N/A</span>
                    </dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.PhoneFormatted)</dt>
                    <dd class="col-sm-10 col-md-9">
                        @if (Model.ContactPhone != null)
                        {
                            <a href="tel:@Model.PhoneFormatted" target="_blank">@Model.PhoneFormatted</a>
                        }
                            <span>N/A</span>
                        
                    </dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.ContactEmailAddress)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.ContactEmailAddress)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.ContactEmailType)</dt>
                    <dd class="col-sm-10 col-md-9">
                        @if (Model.ContactEmailType != null)
                        {
                            @Model.ContactEmailType
                        }
                        <span>N/A</span>
                    </dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.ContactInteractions)</dt>
                    <dd class="col-sm-10 col-md-9">
                        @if (Model.ContactInteractions != null)
                        {
                            @Model.ContactInteractions
                        }
                        <span>N/A</span>
                    </dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.ContactNotes)</dt>
                    <dd class="col-sm-10 col-md-9">
                        @if (Model.ContactNotes != null)
                        {
                            <textarea class="form-control" rows="4" readonly style="background-color: white;">@Model.ContactNotes</textarea>
                        }
                        <span>N/A</span>
                        
                    </dd>
                </dl>

                <div class="form-group text-center">
                    @if (Model?.ID != null && User.IsInRole("Admin"))                           
                    {

                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit Contact</a>
                    }
                    <a class="btn btn-secondary ml-2" asp-action="Index">Back to Contacts</a>
                </div>

            </div>
        </div>
    </div>
</div>
