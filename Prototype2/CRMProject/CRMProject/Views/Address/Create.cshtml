@model CRMProject.Models.Address

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add New Address</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <input type="hidden" asp-for="MemberID" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row">
                    <!-- Address Line 1 -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="AddressLine1" class="control-label">
                                <span class="text-danger">*</span> Address Line 1
                            </label>
                            <input asp-for="AddressLine1" class="form-control" placeholder="123 Main St" required />
                            <span asp-validation-for="AddressLine1" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Address Line 2 -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="AddressLine2" class="control-label"></label>
                            <input asp-for="AddressLine2" class="form-control" placeholder="Suite 500" />
                            <span asp-validation-for="AddressLine2" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- City -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="AddressCity" class="control-label">
                                <span class="text-danger">*</span> City
                            </label>
                            <input asp-for="AddressCity" class="form-control" placeholder="Enter city" required />
                            <span asp-validation-for="AddressCity" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Province -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Province" class="control-label">
                                <span class="text-danger">*</span> Province
                            </label>
                            <select asp-for="Province" class="form-control" asp-items="Html.GetEnumSelectList<Province>()" required>
                                <option value="">Select Province</option>
                            </select>
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Postal Code -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="PostalCode" class="control-label">
                                <span class="text-danger">*</span> Postal Code
                            </label>
                            <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code" required />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Create Address" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to Addresses</a>
                    </div>
            </form>
           
        </div>
       
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
