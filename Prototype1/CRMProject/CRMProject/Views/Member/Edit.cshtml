@model CRMProject.Models.Member

@{
    ViewData["Title"] = "Edit";
}
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <!-- Your existing edit form content here -->
            <div>
                <h1>Edit Member</h1>
                <hr />
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Edit Member Information</h6>
                    </div>
                    @{
                        var hasPicture = (Model.MemberPhoto?.Content != null);
                        if (hasPicture)
                        {
                            @:<div>
                                string imageBase64 = Convert.ToBase64String(Model.MemberPhoto.Content);
                                string imageSrc = string.Format("data:" + Model.MemberPhoto.MimeType + ";base64,{0}", imageBase64);
                                <img src="@imageSrc" alt="Profile Picture of @Model.Summary" 
                                    title="Profile Picture of @Model.Summary" class="img-fluid rounded" />
                            @:</div><hr />
                        }
                    }
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="ID" />
                            <div class="row">
                                <div>
                                    @{
                                        if (hasPicture)
                                        {
                                            <div class="row">
                                                <div class="form-check m-3">
                                                    <input class="form-check-input" type="checkbox" id="chkRemoveImage" name="chkRemoveImage">
                                                    <label class="form-check-label" for="chkRemoveImage">
                                                    <strong>Check to remove Image</strong>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                                <!-- Member Name -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberName" class="control-label"></label>
                                        <input asp-for="MemberName" class="form-control" />
                                        <span asp-validation-for="MemberName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Member Size -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberSize" class="control-label"></label>
                                        <input asp-for="MemberSize" class="form-control" />
                                        <span asp-validation-for="MemberSize" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Member Status -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberStatus" class="control-label"></label>
                                        <select asp-for="MemberStatus" class="form-control"></select>
                                        <span asp-validation-for="MemberStatus" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Accounts Payable Email -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberAccountsPayableEmail" class="control-label"></label>
                                        <input asp-for="MemberAccountsPayableEmail" class="form-control" />
                                        <span asp-validation-for="MemberAccountsPayableEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label class="control-label custom-file-label">Picture File:</label>
                                        <div class="input-group mb-3">
                                            <input type="file" class="form-control" name="thePicture" id="thePicture">
                                        </div>
                                    </div>
                                </div>

                                <!-- Member Start Date -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberStartDate" class="control-label"></label>
                                        <input asp-for="MemberStartDate" type="date" class="form-control" />
                                        <span asp-validation-for="MemberStartDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Member End Date -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberEndDate" class="control-label"></label>
                                        <input asp-for="MemberEndDate" type="date" class="form-control" />
                                        <span asp-validation-for="MemberEndDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Member Notes -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MemberNotes" class="control-label mr-3" style="min-width: 150px; white-space: nowrap;">Member Notes:</label>
                                        <textarea asp-for="MemberNotes" class="form-control" style="min-height: 100px; flex-grow: 1;"></textarea>
                                        <span asp-validation-for="MemberNotes" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary ml-2">Back Members</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
