@model CRMProject.Models.StatusHistory

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
               
                <h1>Are you sure you want to delete this status history record?</h1>

                <hr />

                <dl class="row">
                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.Date)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.Date)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.Reason)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.Reason)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.Notes)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.Notes)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.Member)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.Member.MemberName)</dd>
                </dl>

                <div class="form-group text-center">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger">Delete Status History</button>
                        <a class="btn btn-secondary ml-2" asp-action="Index">Back to Status Histories</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
