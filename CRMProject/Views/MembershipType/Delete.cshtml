@model CRMProject.Models.MembershipType

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h1>Delete Membership Type</h1>
                <hr />
                <h3>Are you sure you want to delete this membership type?</h3>

                <hr />
                <h4>Membership Type Details</h4>

                <dl class="row">
                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.MembershipTypeName)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.MembershipTypeName)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.MembershipTypeDescription)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.MembershipTypeDescription)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.MembershipTypeFee)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.MembershipTypeFee)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => model.MembershipTypeBenefits)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => model.MembershipTypeBenefits)</dd>
                </dl>

                <div class="form-group text-center">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
