@model CRMProject.Models.Industry

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details - " + Model?.IndustryName;
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h1>Industry Information</h1>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IndustryName)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.IndustryName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IndustryNAICSCode)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.IndustryNAICSCode)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IndustryDescription)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.IndustryDescription)</dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MemberIndustries)
                    </dt>
                    <dd class="col-sm-10">
                        @foreach (var c in Model.MemberIndustries)
                        {
                            @c.Member.MemberName <br />
                        }
                    </dd>
                </dl>
            </div>

            <div class="form-group text-center">
                @if (Model?.ID != null)
                {
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit Industry</a>
                }
                <a class="btn btn-secondary ml-2" asp-action="Index">Back to Industries</a>
            </div>
        </div>
    </div>
</div>
