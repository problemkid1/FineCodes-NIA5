@model CRMProject.Models.BrainDump

@{
    ViewData["Title"] = "Create";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

<!-- Custom styles for this template-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Custom styles for this template-->
@* <link href="~/customs/css/style.css" rel="stylesheet"> *@
@* <link href="~/theme/css/custom-colors.css" rel="stylesheet"> *@

<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2>Create Activity</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <!-- Brain Dump Activity -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Activity" class="control-label">
                                <span class="text-danger">*</span> Activity
                            </label>
                            <input asp-for="Activity" class="form-control" placeholder="Enter an Activity" />
                            <span asp-validation-for="Activity" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Brain Dump Assignee -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Assignee" class="control-label"></label>
                            <input asp-for="Assignee" class="form-control" />
                            <span asp-validation-for="Assignee" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Brain Dump Status -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="BrainDumpStatus" class="control-label"></label>
                            <select asp-for="BrainDumpStatus" class="form-control"
                                    asp-items="Html.GetEnumSelectList<BrainDumpStatus>()">
                                <option value="">Select Status</option>
                            </select>
                            <span asp-validation-for="BrainDumpStatus" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Brain Dump Term -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="BrainDumpTerm" class="control-label"></label>
                            <select asp-for="BrainDumpTerm" class="form-control"
                                    asp-items="Html.GetEnumSelectList<BrainDumpTerm>()">
                                <option value="">Select Term</option>
                            </select>
                            <span asp-validation-for="BrainDumpTerm" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Brain Dump Notes -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="BrainDumpNotes" class="control-label"></label>
                            <textarea asp-for="BrainDumpNotes" class="form-control" rows="1" style="resize: vertical;"></textarea>
                            <span asp-validation-for="BrainDumpNotes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create Activity" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to Activities</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


