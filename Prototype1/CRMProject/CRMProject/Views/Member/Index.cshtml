@model IEnumerable<CRMProject.Models.Member>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Member Index";
}
<!-- Custom styles for this template-->
 @* <link href="~/customs/css/style.css" rel="stylesheet">
 *@
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <!-- Your existing create form content here -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h1 mb-0 text-gray-1400">Member</h1>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Add New
                </a>
            </div>

            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead class="table-light">
                            <tr>
                                <th></th>
                                <th>@Html.DisplayNameFor(model => model.MemberName)</th>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.MemberSize)</th>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.MemberStatus)</th>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.MemberAccountsPayableEmail)</th>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.MemberStartDate)</th>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.MemberNotes)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            if (item.MemberThumbnail?.Content != null)
                                            {
                                                string imageBase64 = Convert.ToBase64String(item.MemberThumbnail.Content);
                                                string imageSrc = string.Format("data:" + item.MemberThumbnail.MimeType + ";base64,{0}", imageBase64);
                                                <img src="@imageSrc" alt="Profile Picture of @item?.Summary"
                                                     title="Profile Picture of @item?.Summary" class="img-fluid rounded" />
                                            }
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.MemberName)</td>
                                    <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberSize)</td>
                                    <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberStatus)</td>
                                    <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberAccountsPayableEmail)</td>
                                    <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberStartDate)</td>
                                    <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberNotes)</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                                               role="button" data-bs-toggle="tooltip" title="Edit @ViewData["ControllerFriendlyName"]">
                                                &#x270D;
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                                               role="button" data-bs-toggle="tooltip" title="Details @ViewData["ControllerFriendlyName"]">
                                                &#x1F50E;
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                                               role="button" data-bs-toggle="tooltip" title="Delete @ViewData["ControllerFriendlyName"]">
                                                &#x274C;
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>



