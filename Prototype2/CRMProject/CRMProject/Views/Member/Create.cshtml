                <!-- Industries -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Select Industries</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">

                            <div class="form-group col-md-6">
                                <span class="control-label">Available NAICS codes</span>
                                <button type="button" id="btnAddIndustry" class="btn btn-primary btn-sm"><strong>+</strong></button>
