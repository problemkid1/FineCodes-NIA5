<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

<!-- Custom styles for this template-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Custom styles for this template-->
@* <link href="~/customs/css/style.css" rel="stylesheet"> *@
@* <link href="~/theme/css/custom-colors.css" rel="stylesheet"> *@

<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2>Create Contact</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row">
                    <!-- First Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">
                                <span class="text-danger">*</span> First Name
                            </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">
                                <span class="text-danger">*</span> Last Name
                            </label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Title/Role -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactTitleRole" class="control-label">Title/Role</label>
                            <input asp-for="ContactTitleRole" class="form-control" placeholder="Enter title/role" />
                            <span asp-validation-for="ContactTitleRole" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactPhone" class="control-label">Phone</label>
                            <input asp-for="ContactPhone" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="ContactPhone" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactEmailAddress" class="control-label">
                                <span class="text-danger">*</span> Email
                            </label>
                            <input asp-for="ContactEmailAddress" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="ContactEmailAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Email Type -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactEmailType" class="control-label"></label>
                            <select asp-for="ContactEmailType" class="form-control"
                                    asp-items="Html.GetEnumSelectList<EmailType>()">
                                <option value="">Select an Email Type</option>
                            </select>
                            <span asp-validation-for="ContactEmailType" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Website -->
                    @* <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactWebsite" class="control-label">Website</label>
                            <input asp-for="ContactWebsite" class="form-control" placeholder="Enter website URL" />
                            <span asp-validation-for="ContactWebsite" class="text-danger"></span>
                        </div>
                    </div> *@

                    <!-- Interactions -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactInteractions" class="control-label mr-3" style="min-width: 150px; white-space: nowrap;">Contact Interactions:</label>
                            <textarea asp-for="ContactInteractions" class="form-control" style="min-height: 100px; flex-grow: 1;" placeholder="Enter interaction details"></textarea>
                            <span asp-validation-for="ContactInteractions" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactNotes" class="control-label mr-3" style="min-width: 150px; white-space: nowrap;">Contact Notes:</label>
                            <textarea asp-for="ContactNotes" class="form-control" style="min-height: 100px; flex-grow: 1;" placeholder="Add notes"></textarea>
                            <span asp-validation-for="ContactNotes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create Contact" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to Contacts</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
