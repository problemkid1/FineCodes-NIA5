<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2>Create Opportunity</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <!-- First Row -->
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityName" class="form-label">Opportunity Name </label>
                        <span class="text-danger">*</span>
                        <input asp-for="OpportunityName" class="form-control" required />
                        <span asp-validation-for="OpportunityName" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityStatus" class="form-label">Status</label>
                        <span class="text-danger">*</span>
                        <select asp-for="OpportunityStatus" class="form-control"
                                asp-items="Html.GetEnumSelectList<OpportunityStatus>()" required>
                        </select>
                        <span asp-validation-for="OpportunityStatus" class="text-danger"></span>
                    </div>

                    <!-- Second Row -->
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityPriority" class="form-label">Priority</label>
                        <select asp-for="OpportunityPriority" class="form-control">
                            <option value="">Select Priority</option>
                            <option value="High">High</option>
                            <option value="Low">Low</option>
                        </select>
                        @* @Html.DropDownList("Priority", new SelectList(ViewBag.Priority),"Select Priority", new { @class = "form-control"}) *@
                        <span asp-validation-for="OpportunityPriority" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityAction" class="form-label">Action</label>
                        <span class="text-danger">*</span>
                        <input asp-for="OpportunityAction" class="form-control" required />
                        <span asp-validation-for="OpportunityAction" class="text-danger"></span>
                    </div>

                    <!-- Third Row -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Select Contacts</strong>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <span class="control-label">Available Contacts</span>
                                    <button type="button" id="btnAddContact" class="btn btn-primary btn-sm"><strong>+</strong></button>
                                    @Html.ListBox("availableContact", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                                </div>

                                <div class="form-group col-md-6">
                                    <span class="control-label">Selected Contacts</span>
                                    <button type="button" id="btnRemoveContact" class="btn btn-danger btn-sm"><strong>-</strong></button>
                                    @Html.ListBox("selectedContact", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityLastContactDate" class="form-label">Last Contact Date</label>
                        <span class="text-danger">*</span>
                        <input asp-for="OpportunityLastContactDate" type="date" class="form-control" required max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="OpportunityLastContactDate" class="text-danger"></span>
                    </div>

                    <!-- Fourth Row -->
                    <div class="col-12 mb-3">
                        <label asp-for="OpportunityInteractions" class="form-label">Interactions</label>
                        <span class="text-danger">*</span>
                        <textarea asp-for="OpportunityInteractions" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="OpportunityInteractions" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <button type="submit" id="btnSubmit" class="btn btn-primary">Create Opportunity</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Back to Opportunities</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/multiselect.js"></script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
