@model CRMProject.Models.BrainDump

@{
    ViewData["Title"] = "Details";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}
<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- Compact Definition List Styling -->
<link href="~/customs/css/style.css" rel="stylesheet">

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h2>Detail - @Html.DisplayFor(model => model.Activity)</h2>
                <hr />

                <!-- Custom styles to reduce spacing in definition list -->
                <style>
                    .compact-dl dt, .compact-dl dd {
                        margin-bottom: 0.5rem;
                    }

                    .compact-dl dt {
                        padding-top: 0.5rem;
                    }
                </style>

                <dl class="row compact-dl">
                    <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.Activity)</dt>
                    <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">@Html.DisplayFor(model => model.Activity)</dd>

                    <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.Assignee)</dt>
                    <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                        @if (Model.Assignee != null)
                        {
                            @Model.Assignee
                        }
                        else
                        {
                            <span>N/A</span>
                        }

                    <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.BrainDumpStatus)</dt>
                    <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                            @if (Model.BrainDumpStatus != null)
                            {
                                @Model.BrainDumpStatus.ToString()
                            }
                            else
                            {
                            <span>N/A</span>
                            }
                    </dd>

                    <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.BrainDumpTerm)</dt>
                    <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                            @if (Model.BrainDumpTerm != null)
                            {
                                @Model.BrainDumpTerm.ToString()
                            }
                            else
                            {
                            <span>N/A</span>
                            }
                    </dd>

                    <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.BrainDumpNotes)</dt>
                    <dd class="col-sm-10 col-md-9">
                            @if (Model.BrainDumpNotes != null)
                            {
                            <textarea class="form-control bg-light" rows="1" readonly>@Model.BrainDumpNotes</textarea>
                            }
                            else
                            {
                            <span class="bg-light p-2 d-block rounded">No Current Notes</span>
                            }
                    </dd>
                </dl>


                <div class="form-group text-center mt-3">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit Activity</a>
                    <a class="btn btn-secondary ml-2" asp-action="Index">Back to Activities</a>
                </div>
            </div>
        </div>
    </div>
</div>
