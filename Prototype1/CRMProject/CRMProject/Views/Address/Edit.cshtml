@model CRMProject.Models.Address

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h1>Edit Address</h1>
                <hr />
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Edit Address Details</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="ID" />
                            <div class="row">
                                <!-- Address Line 1 -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="AddressLine1" class="control-label"></label>
                                        <input asp-for="AddressLine1" class="form-control" placeholder="Enter address line 1" />
                                        <span asp-validation-for="AddressLine1" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Address Line 2 -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="AddressLine2" class="control-label"></label>
                                        <input asp-for="AddressLine2" class="form-control" placeholder="Enter address line 2" />
                                        <span asp-validation-for="AddressLine2" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- City -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="AddressCity" class="control-label"></label>
                                        <input asp-for="AddressCity" class="form-control" placeholder="Enter city" />
                                        <span asp-validation-for="AddressCity" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Province -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Province" class="control-label"></label>
                                        <select asp-for="AddressType" class="form-control"
                                                asp-items="Html.GetEnumSelectList<Province>()">
                                            <option value="">Select Province</option>
                                                </select>
                                        <span asp-validation-for="Province" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Postal Code -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PostalCode" class="control-label"></label>
                                        <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code" />
                                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Address Type -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="AddressType" class="control-label"></label>
                                        <select asp-for="AddressType" class="form-control"
                                                asp-items="Html.GetEnumSelectList<AddressType>()">
                                            <option value="">Select Address Type</option>
                                                </select>
                                        <span asp-validation-for="AddressType" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Member ID -->
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="MemberID" class="control-label"></label>
                                        <select asp-for="MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                                        <span asp-validation-for="MemberID" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary ml-2">Back to Address</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
