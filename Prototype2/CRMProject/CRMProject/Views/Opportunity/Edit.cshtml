@model CRMProject.Models.Opportunity

@{
    ViewData["Title"] = "Edit";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="col-12">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 fw-bold text-primary">Edit Opportunity - @Html.DisplayFor(model => model.OpportunityName)</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="ID" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="OpportunityName" class="form-label">Opportunity Name <span class="text-danger">*</span></label>
                        <input asp-for="OpportunityName" class="form-control" />
                        <span asp-validation-for="OpportunityName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="OpportunityStatus" class="form-label">Status <span class="text-danger">*</span></label>
                        <select asp-for="OpportunityStatus" class="form-control" asp-items="Html.GetEnumSelectList<OpportunityStatus>()">
                            <option value="">Select Status</option>
                        </select>
                        <span asp-validation-for="OpportunityStatus" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="OpportunityPriority" class="form-label">Priority</label>
                        <select asp-for="OpportunityPriority" class="form-control">
                            <option value="">Select Priority</option>
                            <option value="High">High</option>
                            <option value="Low">Low</option>
                        </select>
                        <span asp-validation-for="OpportunityPriority" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="OpportunityAction" class="form-label">Action</label>
                        <input asp-for="OpportunityAction" class="form-control" />
                        <span asp-validation-for="OpportunityAction" class="text-danger small"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-light py-2">
                                <strong class="text-dark">Select Contacts</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex mb-2">
                                            <label class="form-label">Available Contacts</label>
                                            <button type="button" id="btnAddContact" class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                        @Html.ListBox("availableContact", (MultiSelectList)ViewBag.availOpts, new { @size = 8, @class = "form-control" })
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex mb-2">
                                            <label class="form-label">Selected Contacts</label>
                                            <button type="button" id="btnRemoveContact" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                        @Html.ListBox("selectedContact", (MultiSelectList)ViewBag.selOpts, new { @size = 8, @class = "form-control" })
                                    </div>



                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="OpportunityLastContactDate" class="form-label">Last Contact Date</label>
                        <input asp-for="OpportunityLastContactDate" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="OpportunityLastContactDate" class="text-danger small"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="OpportunityInteractions" class="form-label">Interactions</label>
                        <textarea asp-for="OpportunityInteractions" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="OpportunityInteractions" class="text-danger small"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        <i class="fas fa-save me-1"></i> Save Opportunity
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back To Opportunity
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/multiselect.js"></script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
