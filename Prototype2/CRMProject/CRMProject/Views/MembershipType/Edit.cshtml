<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="fa-solid fa-x"></i>
        </button>
    </div>
}

<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2>Edit - @Html.DisplayFor(model => model.MembershipTypeName)</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ID" />
                <div class="row">
                   
                    <!-- Membership Type Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MembershipTypeName" class="control-label">
                                <span class="text-danger">*</span> MembershipTypeName
                            </label>
                            <select asp-for="MembershipTypeName" class="form-control"
                                    asp-items="ViewBag.MembershipTypeNameList">
                                <option value="">Select a Membership Type</option>
                            </select>
                            <span asp-validation-for="MembershipTypeName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Membership Type Fee -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MembershipTypeFee" class="control-label"></label>
                            <input asp-for="MembershipTypeFee" class="form-control" />
                            <span asp-validation-for="MembershipTypeFee" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Membership Type Description -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MembershipTypeDescription" class="control-label"></label>
                            <textarea asp-for="MembershipTypeDescription" class="form-control" style="min-height: 100px; flex-grow: 1;"></textarea>
                            <span asp-validation-for="MembershipTypeDescription" class="text-danger"></span>
                        </div>
                    </div>



                    <!-- Membership Type Benefits -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MembershipTypeBenefits" class="control-label"></label>
                            <textarea asp-for="MembershipTypeBenefits" class="form-control" style="min-height: 100px; flex-grow: 1;"></textarea>
                            <span asp-validation-for="MembershipTypeBenefits" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save Membership Type" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to Membership Types</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
