@model CRMProject.Models.BrainDump

@{
    ViewData["Title"] = "Edit";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

<!-- Custom styles for this template-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Custom styles for this template-->
@* <link href="~/customs/css/style.css" rel="stylesheet"> *@
@* <link href="~/theme/css/custom-colors.css" rel="stylesheet"> *@
<style>
    #SameZiseBtn {
        min-height: 50px;
        min-width: 155px;
        align-content: center;
    }
</style>
<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2>Edit - @Html.DisplayFor(model => model.Activity)</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ID" />
                <div class="row">
                    <!-- Membership Type Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Activity" class="control-label">
                                <span class="text-danger">*</span> Activity
                            </label>
                            <input asp-for="Activity" class="form-control" />
                            <span asp-validation-for="Activity" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Membership Type Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Assignee" class="control-label">
                                Assignee
                            </label>
                            <input asp-for="Assignee" class="form-control" />
                            <span asp-validation-for="Assignee" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Membership Type Name -->
                    

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="BrainDumpStatus" class="control-label">Status</label>
                            <select asp-for="BrainDumpStatus" class="form-control"
                                    asp-items="ViewBag.BrainDumpStatusList">
                                <option value="">Select a Status</option>
                            </select>
                            <span asp-validation-for="BrainDumpStatus" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Membership Type Name -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="BrainDumpTerm" class="control-label">
                                Term
                            </label>
                            <select asp-for="BrainDumpTerm" class="form-control"
                                    asp-items="ViewBag.BrainDumpTermList">
                                <option value="">Select a Term</option>
                            </select>
                            <span asp-validation-for="BrainDumpTerm" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Membership Type Description -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="BrainDumpNotes" class="control-label"></label>
                            <textarea asp-for="BrainDumpNotes" class="form-control" rows="1" style="resize: vertical;"></textarea>
                            <span asp-validation-for="BrainDumpNotes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save Activity" class="btn btn-primary" id="SameZiseBtn" />
                    <a asp-action="Index" class="btn btn-secondary ml-2" id="SameZiseBtn">Back to Activities</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

