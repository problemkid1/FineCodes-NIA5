@model IEnumerable<CRMProject.Models.MemberContact>
<br />
<div class="panel panel-primary">
	<div class="panel-heading">
		<h4 class="panel-title">Contact Information</h4>
	</div>
	<div class="panel-body scrollable-panel">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Contact.Summary)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Contact.ContactTitleRole)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Contact.PhoneFormatted)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Contact.ContactEmailAddress)
					</th>
					<th>
						Email Type
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							<a asp-action="Details" asp-controller="Contact" asp-route-ID="@item.ContactID">
								@Html.DisplayFor(modelItem => item.Contact.Summary)
							</a>
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Contact.ContactTitleRole)
						</td>
						<td>
							<a href="@item.Contact.PhoneFormatted" target="_blank">@item.Contact.PhoneFormatted</a>
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Contact.ContactEmailAddress)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Contact.ContactEmailType)
						</td>						
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
