<!-- Export Button to trigger the dialog -->
<button id="exportButton" class="btn btn-primary">Export Records</button>

<!-- Custom Dialog for Record Selection -->
<div id="exportDialog" class="custom-dialog-overlay" style="display: none;">
    <div class="custom-dialog" role="dialog" aria-labelledby="dialogTitle">
        <div class="dialog-header">
            <h5 id="dialogTitle" class="dialog-title">Export Members</h5>
            <button type="button" class="dialog-close" aria-label="Close">×</button>
        </div>
        <div class="dialog-body">
            <form id="exportForm">
                <div class="form-group mb-3">
                    <label for="startDate">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" required>
                </div>
                <div class="form-group mb-3">
                    <label for="endDate">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" required>
                </div>

                <h6 class="mt-4 mb-2">Select Fields to Export</h6>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Contact" id="contactCheck">
                    <label class="form-check-label" for="contactCheck">Contact</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="MembershipType" id="membershipTypeCheck">
                    <label class="form-check-label" for="membershipTypeCheck">Membership Type</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Industry" id="industryCheck">
                    <label class="form-check-label" for="industryCheck">Industry</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Address" id="addressCheck">
                    <label class="form-check-label" for="addressCheck">Address</label>
                </div>
            </form>
        </div>
        <div class="dialog-footer">
            <button type="button" class="btn btn-secondary dialog-close">Close</button>
            <button type="button" class="btn btn-primary" id="exportSubmit">Export</button>
        </div>
    </div>
</div>
