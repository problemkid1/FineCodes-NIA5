@model CRMProject.Models.OpportunityContact

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Remove Contact Confirmation";
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h2>Confirm Contact Removal - @Html.DisplayFor(model => @Model.Contact.Summary)</h2>

                <hr />

                <dl class="row">
                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => @Model.Contact.Summary)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => @Model.Contact.Summary)</dd>

                    <dt class="col-sm-2 col-md-3">@Html.DisplayNameFor(model => @Model.Opportunity.OpportunityName)</dt>
                    <dd class="col-sm-10 col-md-9">@Html.DisplayFor(model => @Model.Opportunity.OpportunityName)</dd>

                </dl>

                <div class="form-group text-center">
                    <h3>Are you sure you want to remove this contact from this opportunity?</h3>
                    <form asp-action="RemoveContactConfirmed" method="post">
                        <input type="hidden" asp-for="ContactID" />
                        <input type="hidden" asp-for="OpportunityID" />
                        <button type="submit" class="btn btn-danger">Confirm Remove</button>
                        <a asp-action="Details" asp-route-id="@Model.OpportunityID" class="btn btn-secondary">Back to opportunity detail</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
