@model IEnumerable<CRMProject.Models.Member>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Member Index";
}
<!-- Custom styles for this template-->
<link href="~/customs/css/style.css" rel="stylesheet">

<div class="col-12">
    <div class="card">
        <div class="card-body">

            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h1 mb-0 text-gray-1400">Members</h1>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Add New
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MemberName)</th>
                                    <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.FirstOrDefault().MemberSize)</th>
                                    <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.FirstOrDefault().MemberStatus)</th>
                                    <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.FirstOrDefault().MemberAccountsPayableEmail)</th>
                                    <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.FirstOrDefault().MemberStartDate)</th>
                                    <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.MemberNotes)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No members available.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.MemberName)</td>
                                            <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberSize)</td>
                                            <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberStatus)</td>
                                            <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberAccountsPayableEmail)</td>
                                            <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberStartDate)</td>
                                            <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.MemberNotes)</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                                                       role="button" data-bs-toggle="tooltip" title="Edit @ViewData["ControllerFriendlyName"]">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>

                                                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                                                       role="button" data-bs-toggle="tooltip" title="Details @ViewData["ControllerFriendlyName"]">
                                                        <i class="bi bi-search"></i>
                                                    </a>

                                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                                                       role="button" data-bs-toggle="tooltip" title="Archive @ViewData["ControllerFriendlyName"]">
                                                        <i class="bi bi-archive-fill"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>