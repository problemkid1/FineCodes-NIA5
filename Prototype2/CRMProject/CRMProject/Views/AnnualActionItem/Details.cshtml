@model CRMProject.Models.AnnualActionItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details - Action Item";
}

<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- Optional custom style -->
<link href="~/customs/css/style.css" rel="stylesheet">
<style>
    #SameZiseBtn {
        min-height: 50px;
        min-width: 155px;
        align-content: center;
    }
</style>
<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <i class="bi bi-x"></i>
        </button>
    </div>
}
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h2>Details - @Html.DisplayFor(model => model.ActionItem)</h2>
            <hr />

            <!-- Compact Definition List Styling -->
            <style>
                .compact-dl dt, .compact-dl dd {
                    margin-bottom: 0.5rem;
                }

                .compact-dl dt {
                    padding-top: 0.5rem;
                }
            </style>

            <dl class="row compact-dl">
                <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.ActionItem)</dt>
                <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                    @if (!string.IsNullOrWhiteSpace(Model.ActionItem))
                    {
                        @Model.ActionItem
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </dd>

                <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.Assignee)</dt>
                <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                    @if (!string.IsNullOrWhiteSpace(Model.Assignee))
                    {
                        @Model.Assignee
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </dd>

                <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.DueDate)</dt>
                <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                    @Model.DueDate.ToString("yyyy-MM-dd")
                </dd>

                <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                    @if (!string.IsNullOrWhiteSpace(Model.Status))
                    {
                        @Model.Status
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </dd>

                <dt class="col-sm-2 col-md-2">@Html.DisplayNameFor(model => model.Notes)</dt>
                <dd class="col-sm-10 col-md-9 bg-light p-2 rounded">
                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <textarea class="form-control" rows="2" readonly style="background-color: white;">@Model.Notes</textarea>
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="form-group text-center mt-4">
        <a class="btn btn-warning" id="SameZiseBtn" asp-action="Edit" asp-route-id="@Model.ID">Edit Action Item</a>
        <a class="btn btn-secondary ms-2" id="SameZiseBtn" asp-action="Index">Back to Action Items</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
