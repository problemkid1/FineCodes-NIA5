@model CRMProject.Models.Opportunity

@{
    ViewData["Title"] = "Create";
}

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2>Create Opportunity</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <!-- First Row -->
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityName" class="form-label">
                            <span class="text-danger">*</span> Opportunity Name
                        </label>
                        <input asp-for="OpportunityName" class="form-control" required />
                        <span asp-validation-for="OpportunityName" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityStatus" class="form-label">
                            <span class="text-danger">*</span> Status
                        </label>
                        <select asp-for="OpportunityStatus" class="form-control"
                                asp-items="Html.GetEnumSelectList<OpportunityStatus>()" required>
                        </select>
                        <span asp-validation-for="OpportunityStatus" class="text-danger"></span>
                    </div>

                    <!-- Second Row -->
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityPriority" class="form-label">
                            <span class="text-danger">*</span> Priority
                        </label>
                        <input asp-for="OpportunityPriority" class="form-control" required />
                        <span asp-validation-for="OpportunityPriority" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityAction" class="form-label">
                            <span class="text-danger">*</span> Action
                        </label>
                        <input asp-for="OpportunityAction" class="form-control" required />
                        <span asp-validation-for="OpportunityAction" class="text-danger"></span>
                    </div>

                    <!-- Third Row -->
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="Contact.Summary" class="form-label">
                            <span class="text-danger">*</span> Contact
                        </label>
                        <input asp-for="Contact.Summary" class="form-control" required />
                        <span asp-validation-for="Contact.Summary" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="OpportunityLastContactDate" class="form-label">
                            <span class="text-danger">*</span> Last Contact Date
                        </label>
                        <input asp-for="OpportunityLastContactDate" type="date" class="form-control" required max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="OpportunityLastContactDate" class="text-danger"></span>
                    </div>

                    <!-- Fourth Row -->
                    <div class="col-12 mb-3">
                        <label asp-for="OpportunityInteractions" class="form-label">
                            <span class="text-danger">*</span> Interactions
                        </label>
                        <textarea asp-for="OpportunityInteractions" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="OpportunityInteractions" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">Create Opportunity</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Back to Opportunities</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
