@model CRMProject.Models.StatusHistory

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details - " + Model?.Reason;
}

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div>
                <h1>Status History Information</h1>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Member)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Member.MemberName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Reason)</dt>
                    <dd class="col-sm-10"><textarea class="form-control" readonly>@Model.Reason</textarea>
                        
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
                    <dd class="col-sm-10"><textarea class="form-control" readonly>@Model.Notes</textarea></dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Date, "{0:yyyy-MM-dd}")</dd>
                </dl>
            </div>

            <div class="form-group text-center">
                @if (Model?.ID != null)
                {
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit Status History</a>
                }
                <a class="btn btn-secondary ml-2" asp-action="Index">Back to Status Histories</a>
            </div>
        </div>
    </div>
</div>
