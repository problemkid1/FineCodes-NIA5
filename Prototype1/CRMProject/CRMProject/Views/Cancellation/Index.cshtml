@model IEnumerable<CRMProject.Models.Cancellation>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cancellation Index";
}

<!-- Custom styles for this template-->
<link href="~/customs/css/style.css" rel="stylesheet">

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <!-- Header Section -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h1 mb-0 text-gray-1400">Cancellation</h1>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Add Cancellation
                </a>
            </div>

            <div class="card">
                <!-- Table Section -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead class="table-light">
                            <tr>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.Member.MemberName)</th>
                                <th>@Html.DisplayNameFor(model => model.CancellationDate)</th>
                                <th>@Html.DisplayNameFor(model => model.CancellationReason)</th>
                                <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.CancellationNotes)</th>                                
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No cancellations available.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="d-none d-sm-table-cell">
                                            @if (item.Member != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.Member.MemberName)
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>
                                        <td>@item.CancellationDate.ToString("MMM dd, yyyy")</td>
                                        <td>@Html.DisplayFor(modelItem => item.CancellationReason)</td>
                                        <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.CancellationNotes)</td>                                       
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-md btn-outline-primary disabled" role="button" aria-disabled="true"
                                                   style="opacity: 0.4; filter: grayscale(80%); border: 2px dashed #3B54A0; pointer-events: none;"
                                                   data-bs-toggle="tooltip" title="Edit @ViewData["ControllerFriendlyName"]">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>

                                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-md btn-outline-primary"
                                                   role="button" data-bs-toggle="tooltip" title="Details @ViewData["ControllerFriendlyName"]">
                                                    <i class="bi bi-search"></i>
                                                </a>

                                                <a class="btn btn-md btn-outline-primary disabled" role="button" aria-disabled="true"
                                                   style="opacity: 0.4; filter: grayscale(80%); border: 2px dashed #3B54A0; pointer-events: none;"
                                                   data-bs-toggle="tooltip" title="Delete @ViewData["ControllerFriendlyName"]">
                                                    <i class="bi bi-archive-fill"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
