                        extend: "copy",
                        title: function () { return pageTitle + " - " + getFormattedDateTime(); },
                        exportOptions: {
                            columns: ':not(:last-child)' // Exclude last column (Actions)
                        }
                    },
                    {
                        extend: "excel",
                        title: function () { return pageTitle + " - " + getFormattedDateTime(); },
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    },
                    {
                        extend: "pdf",
                        title: function () { return pageTitle + " - " + getFormattedDateTime(); },
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    },
                    {
                        extend: "print",
                        title: function () { return pageTitle + " - " + getFormattedDateTime(); },
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    }
                ]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            $('#example2').DataTable({
