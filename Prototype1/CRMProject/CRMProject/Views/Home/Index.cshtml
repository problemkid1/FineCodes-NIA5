@{
    ViewData["Title"] = "CRM";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Members Count Card -->
        <div class="col-lg-6 mb-4">
            <a href="/Member" class="text-decoration-none">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    All Members
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["MemberCount"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Members with Good Standing -->
        <div class="col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Members with Good Standing
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["GoodStandingCount"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </div>

    <!-- New Row for Opportunities and Overdue Payment -->
    <div class="row">

        <!-- Members with Overdue Payment -->
        <div class="col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Members with Overdue Payment
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["OverduePaymentCount"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Opportunities Count Card -->
        <div class="col-lg-6 mb-4">
            <a href="/Opportunity" class="text-decoration-none">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Opportunities
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["OpportunityCount"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-briefcase fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        
    </div>

    <!-- Industries Count Card -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <a href="/Industry" class="text-decoration-none">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Industries
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["IndustryCount"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-industry fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Cancellations Count Card -->
        <div class="col-lg-6 mb-4">
            <a href="/Cancellation" class="text-decoration-none">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Cancellations
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["CancellationCount"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-ban fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>


</div>
<!-- /.container-fluid -->