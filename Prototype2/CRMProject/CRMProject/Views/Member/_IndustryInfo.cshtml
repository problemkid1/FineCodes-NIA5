@model IEnumerable<CRMProject.Models.MemberIndustry>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 class="panel-title">Industry Information</h4>
    </div>
    <div class="panel-body scrollable-panel">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Industry.IndustryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Industry.IndustryNAICSCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Industry.IndustryDescription)
                    </th>
                    <th style ="float: right; padding-left: 10%;">
                        <a asp-controller="PatientAppointment" asp-action="Add">
                            <span class="btn btn-success" data-bs-toggle="tooltip"
                                  title="Add Appointment"><strong>&#x271A; Add</strong></span>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-controller="Industry" asp-route-ID="@item.IndustryID">
                                @Html.DisplayFor(modelItem => item.Industry.IndustryName)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Industry.IndustryNAICSCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Industry.IndustryDescription)
                        </td>
                        <td style="float: right; padding-left: 10%;">
                            <div class="btn-group">
                                <a asp-action="Edit" class="btn btn-md btn-outline-primary " role="button" aria-disabled="false"
                                   data-bs-toggle="tooltip" title="Edit @ViewData["ControllerFriendlyName"]">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a asp-action="Details" class="btn btn-md btn-outline-primary"
                                   role="button" data-bs-toggle="tooltip" title="Details @ViewData["ControllerFriendlyName"]">
                                    <i class="bi bi-search"></i>
                                </a>

                                <a asp-action="Delete" class="btn btn-md btn-outline-primary " role="button" aria-disabled="false"
                                   data-bs-toggle="tooltip" title="Delete @ViewData["ControllerFriendlyName"]">
                                    <i class="bi bi-archive-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
